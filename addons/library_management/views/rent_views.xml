<odoo>
    <!-- List view -->
    <record id="view_library_rent_list" model="ir.ui.view">
        <field name="name">library.rent.list</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <list decoration-warning="not return_date">
                <field name="partner_id"/>
                <field name="book_id"/>
                <field name="rent_date"/>
                <field name="return_date"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_library_rent_form" model="ir.ui.view">
        <field name="name">library.rent.form</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- return_date -> робить книгу доступною -->
                    <button name="action_return_book"
                            string="Повернути книгу"
                            type="object"
                            class="btn-primary"
                            invisible="return_date != False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="book_id"/>
                        </group>
                        <group>
                            <!-- readonly -->
                            <field name="rent_date" readonly="1"/>
                            <field name="return_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_rent" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">library.rent</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_rent"
              name="Rentals"
              parent="menu_library_root"
              action="action_library_rent"
              sequence="20"/>
</odoo>
