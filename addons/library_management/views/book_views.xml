<odoo>
    <!-- List view -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
                <field name="is_available" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_rent_wizard"
                            string="Видати книгу"
                            type="object"
                            class="btn-primary"
                            invisible="not is_available"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="published_date"/>
                        <field name="is_available"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Library" sequence="10"/>
    <menuitem id="menu_library_books" name="Books"
              parent="menu_library_root"
              action="action_library_book"/>
</odoo>
